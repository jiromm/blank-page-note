{
	"name": "Blank Page Note",
	"description": "To take notes directly from chrome's blank page",
	"manifest_version": 2,
	"version": "0.2",
	"incognito": "split",

	"icons": {
		"24": "assets/24.png",
		"48": "assets/48.png",
		"64": "assets/64.png",
		"128": "assets/128.png",
		"256": "assets/256.png"
	},

	"chrome_url_overrides": {
		"newtab": "blank.html"
	},

	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"https://*.dropbox.com/",
		"storage"
	],

	"background": {
		"page": "bg.html"
	},

	"content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'",

	"externally_connectable": {
		"matches": ["https://*.dropbox.com/*"]
	},

	"web_accessible_resources": [
		"chrome_oauth_receiver.html"
	]
}
